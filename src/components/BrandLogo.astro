---
// src/components/BrandLogo.astro - PNG Kullanımı
import { Image } from "astro:assets";
// Yüklediğin PNG logosunu import et (Dosya yolunu ve adını kontrol et!)
import kraffeLogoPng from "@images/kraffe-logo.png"; 

// Dışarıdan gelen 'class' özelliğini al
const { class: className, ...rest } = Astro.props;
---
<Image
  src={kraffeLogoPng}
  alt="Kraffe Roasters Logo"
  // Gelen class'ları uygula
  class:list={[className]} 
  loading="eager"    
  decoding="async"
  inferSize={true} // Astro'nun boyutları dosyadan okumasını sağla
  {...rest}       
/>
